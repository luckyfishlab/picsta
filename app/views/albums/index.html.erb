<div class="row">
  <div class="span6">
    <h3>Your Albums</h3>

    <table>
      <tr>
        <th>Title</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>
  </div>
  <div class="span6">

    <h3>Shared Albums</h3>
    <% @shares.each do |share| %>
        <%= link_to share.album.title, share.album %>
    <% end %>
  </div>
</div>

<br />

<%= link_to 'New Album', new_album_path, :class=>"btn" %>
