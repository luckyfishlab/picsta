<% content_for :head do %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
<% end %>
<h2>Sign up for a Picsta Subscription Plan</h2>
<%# TODO  validate this div works %>
<div id="stripe_error" class="alert alert-error" style="display:none" >
</div>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical card_form' }) do |f| %>

    <%= hidden_field_tag 'plan', params[:plan] %>
    <%= f.error_notification %>
    <%= display_base_errors resource %>
    <%= f.input :name, :autofocus => true, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>

    <% if @user.subscription.stripe_token and not @user.subscription.stripe_token.empty? %>
      <p>Credit card acceptance is pending.</p>
    <% else %>
      <div class="field">
        <%= label_tag :card_number, "Credit Card Number" %>
        <%= text_field_tag :card_number, nil, name: nil %>
      </div>
      <div class="field">
        <%= label_tag :card_code, "Card Security Code (CVV)" %>
        <%= text_field_tag :card_code, nil, name: nil %>
      </div>
      <div class="field">
        <%= label_tag :card_month, "Card Expiration" %>
        <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"}%>
        <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+10}, {name: nil, id: "card_year"}%>
      </div>
      <div class="field">
        <%= f.simple_fields_for :subscription do |s| %>
          <%= s.input :coupon, :label => 'Promotional Coupon (if any)' %>
        <% end %>
      </div>

    <% end %>
    <%= f.simple_fields_for :subscription do |s| %>
        <%= s.hidden_field :stripe_token %>
    <% end %>

    <%= f.button :submit, 'Sign up', :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
