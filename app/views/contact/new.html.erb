<div class="span4">
<p>Do you have any suggestions, kudos, or rants for Picsta? Please complete and submit the form. We'd love to hear from you.</p>
</div>
<div class="span6">
<%= form_for @message, :url => contact_path do |form| %>
  <fieldset class="fields">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, :disabled=>true %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, :disabled=>true %>
    </div>
    <div class="field">
      <%= form.label :subject %>
      <%= form.text_field :subject, :disabled=>true %>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>
  </fieldset>

  <fieldset class="actions">
    <%= form.submit "Send" %>
  </fieldset>
<% end %>
</div>