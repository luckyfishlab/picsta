<h1>Share an album</h1>

<%= simple_form_for(@share) do |f| %>
  <%= f.error_notification %>
   <div><%= f.hidden_field :album_id %></div>
  <div class="form-inputs">
    <%= f.association :user, :collection => User.where("name is NOT NULL"), :prompt => "Choose a User", :label_method=>:name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>


<% end %>
