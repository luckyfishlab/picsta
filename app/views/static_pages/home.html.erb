        <div class="navbar navbar-inverse">
            <div class="navbar-inner">
              <%= render 'layouts/navigation' %>
            </div><!-- /.navbar-inner -->
        </div><!-- /.navbar -->

    </div> <!-- /.container -->
</div><!-- /.navbar-wrapper -->

<div id="main" role="main">
<div class="content-wrapper" id="body">
<div id="myCarousel" class="carousel slide">
    <div class="carousel-inner">
        <div class="item active">

            <%= image_tag "birthday_grey.jpg" %>
          <div class="messages-wrapper">
            <div class="container">
              <%= render 'layouts/messages' %>

            </div>
          </div>
            <div class="container">

                <div class="carousel-caption pull-right">
                    <h1>Picsta</h1>
                    <p class="lead">Picsta makes it simple to save and share your pictures with the most important people in your life, your family. Add images directly from your smartphone or computer without fear of becoming the next social network product.</p>
                  <%=  link_to 'More Info', more_info_path, :class =>"btn btn-large btn-primary" %> <%= link_to 'Login', new_user_session_path, :class => "btn btn-large btn-info" %>
                </div>
            </div>
        </div>
    </div>
